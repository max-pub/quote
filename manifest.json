{
  "manifest_version": 2,
  "name": "mark.pink",
  "description": "mark stuff",
  "version": "1.1",
  "author": "www.max.pub",
  "icons": {
    "256": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Save Quote (Alt + Q)",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q",
        "windows": "Alt+Q"
      }
    }
  },
  "permissions": [
      "activeTab",
      "https://api.max.pub/quote/*"
    ]
